<body class="background1">
    <div class="container-fluid" style="min-height:85vh">
        <div class="row">
            <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1"></div>
            
            <div class="col-xl-4 col-lg-6 col-md-8 col-sm-10 col-xs-12">

            {{#if correcto}}
                <form class="form-container2">
                    <h1>{{correcto}}</h1>
                </form>
            {{else}}
                <form class="form-container2" action="/contact" method="post">
                    <div class="form-group">
                        <div class="Acceso1">
                            <h1>Contact</h1>
                            <p>Please complete the following steps to receive customized help.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input type="email" class="form-control" id="mail" name="mail" aria-describedby="emailHelp" placeholder="Email" required>
                        <small id="emailHelp" class="form-text text-muted">We will not share your email address with anyone.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Subject</label>
                        <input type="text" class="form-control" id="asunto" name="asunto" placeholder="Subject" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputDescripcion1">Description</label>
                        <textarea class="form-control" id="mensaje" name="mensaje" rows="5" placeholder="Message" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Send</button>
                    </div>
                </form>
            {{/if}}
            </div>
            <div class="col-xl-4 col-lg-3 col-md-2 col-sm-1"></div>
        </div>
    </div>
</body>